import os
import json
from telegram import Update, InlineKeyboardButton, InlineKeyboardMarkup
from telegram.ext import ApplicationBuilder, CommandHandler, CallbackQueryHandler, ContextTypes

DATA_FILE = "data.json"

# Daten laden und speichern
def load_data():
    try:
        with open(DATA_FILE, "r") as f:
            return json.load(f)
    except:
        return {}

def save_data(data):
    with open(DATA_FILE, "w") as f:
        json.dump(data, f)

# /start Befehl
async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    user_id = str(update.effective_user.id)
    data = load_data()
    if user_id not in data:
        data[user_id] = {"energy": 0, "power": 1, "clicks": 0}
        save_data(data)
    keyboard = [
        [InlineKeyboardButton("☀️ Klick die Sonne!", callback_data="click_sun")],
        [InlineKeyboardButton("⚡ Upgrade (+1 Power, 10 Energie)", callback_data="upgrade")],
    ]
    reply_markup = InlineKeyboardMarkup(keyboard)
    await update.message.reply_text(
        f"Willkommen bei ☀️ Solar Clicker!\n"
        f"Energie: {data[user_id]['energy']}\n"
        f"Klick-Power: {data[user_id]['power']}",
        reply_markup=reply_markup
    )

# Button Aktionen
async def button(update: Update, context: ContextTypes.DEFAULT_TYPE):
    query = update.callback_query
    await query.answer()
    user_id = str(query.from_user.id)
    data = load_data()

    if user_id not in data:
        data[user_id] = {"energy": 0, "power": 1, "clicks": 0}

    if query.data == "click_sun":
        data[user_id]["energy"] += data[user_id]["power"]
        data[user_id]["clicks"] += 1
        save_data(data)

    elif query.data == "upgrade":
        if data[user_id]["energy"] >= 10:
            data[user_id]["energy"] -= 10
            data[user_id]["power"] += 1
            save_data(data)
        else:
            await query.edit_message_text(f"Nicht genug Energie für Upgrade! Du hast {data[user_id]['energy']} Energie.")
            return

    keyboard = [
        [InlineKeyboardButton("☀️ Klick die Sonne!", callback_data="click_sun")],
        [InlineKeyboardButton("⚡ Upgrade (+1 Power, 10 Energie)", callback_data="upgrade")],
    ]
    reply_markup = InlineKeyboardMarkup(keyboard)
    await query.edit_message_text(
        f"Energie: {data[user_id]['energy']}\n"
        f"Klick-Power: {data[user_id]['power']}",
        reply_markup=reply_markup
    )

# Hauptprogramm
if __name__ == "__main__":
    TOKEN = os.environ.get("TELEGRAM_TOKEN")  # Hier kommt dein Bot-Token rein
    app = ApplicationBuilder().token(TOKEN).build()
    app.add_handler(CommandHandler("start", start))
    app.add_handler(CallbackQueryHandler(button))
    app.run_polling()
